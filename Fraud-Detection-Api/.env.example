# Fraud Detection API Configuration
FRAUD_DEBUG=false
FRAUD_HOST=0.0.0.0
FRAUD_PORT=8000
FRAUD_WORKERS=4

# Redis
FRAUD_REDIS_URL=redis://localhost:6379
FRAUD_REDIS_CACHE_TTL=300
FRAUD_REDIS_ENABLED=true

# Model
FRAUD_MODEL_PATH=data/fraud_model.joblib
FRAUD_MODEL_THRESHOLD=0.5
FRAUD_FEATURE_COUNT=30

# Circuit Breaker
FRAUD_CB_FAILURE_THRESHOLD=5
FRAUD_CB_RECOVERY_TIMEOUT=30
FRAUD_CB_HALF_OPEN_MAX_CALLS=3

# Rate Limiting
FRAUD_RATE_LIMIT_PER_MINUTE=600

# Monitoring
FRAUD_ENABLE_METRICS=true
FRAUD_ENABLE_TRACING=false
FRAUD_JAEGER_HOST=localhost
FRAUD_JAEGER_PORT=6831

# Drift
FRAUD_DRIFT_WINDOW_SIZE=1000
FRAUD_DRIFT_PSI_THRESHOLD=0.2
FRAUD_DRIFT_CHECK_INTERVAL=60
