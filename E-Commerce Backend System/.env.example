# E-Commerce Backend Configuration
ECOM_DEBUG=false
ECOM_HOST=0.0.0.0
ECOM_PORT=8000

# Database (SQLite for local dev, PostgreSQL for production)
ECOM_DATABASE_URL=sqlite+aiosqlite:///./data/ecommerce.db
# ECOM_DATABASE_URL=postgresql+asyncpg://ecom:ecom_pass@localhost:5432/ecommerce
ECOM_DB_POOL_SIZE=20
ECOM_DB_MAX_OVERFLOW=10
ECOM_DB_POOL_TIMEOUT=30
ECOM_DB_POOL_RECYCLE=1800

# Redis
ECOM_REDIS_URL=redis://localhost:6379
ECOM_REDIS_ENABLED=true
ECOM_REDIS_CACHE_TTL=300
ECOM_REDIS_RATE_LIMIT_WINDOW=60
ECOM_REDIS_RATE_LIMIT_MAX=100
